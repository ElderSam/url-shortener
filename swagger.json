{
  "openapi": "3.0.3",
  "info": {
    "title": "URL Shortener API",
    "version": "1.0.0"
  },
  "paths": {
    "/shorten": {
      "post": {
        "tags": ["Shorten"],
        "summary": "Shorten a URL (anonymous or authenticated)",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ShortenUrlDto"
              },
              "examples": {
                "default": {
                  "summary": "Valid request",
                  "value": { "originalUrl": "https://example.com", "alias": "myalias" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Shortened URL created successfully",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "summary": "Shortened URL created",
                      "value": { "shortUrl": "http://localhost:3000/myalias", "ownerId": "user-id-or-null" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "examples": {
                  "invalidInput": {
                    "summary": "Invalid input",
                    "value": { "statusCode": 400, "message": "URL must be valid and include http:// or https://", "error": "Bad Request" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid or expired token",
            "content": {
              "application/json": {
                "examples": {
                  "invalidToken": {
                    "summary": "Invalid or expired token",
                    "value": { "statusCode": 401, "message": "Invalid or expired token", "error": "Unauthorized" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{short}": {
      "get": {
        "tags": ["Shorten"],
        "summary": "Redirect to original URL and count access",
        "parameters": [
          {
            "name": "short",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Short code (slug or alias) to redirect",
            "example": "abc123"
          }
        ],
        "responses": {
          "302": {
            "description": "Redirect to original URL",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                },
                "description": "The original URL to redirect to",
                "example": "https://example.com"
              }
            }
          },
          "404": {
            "description": "Short URL not found or deleted",
            "content": {
              "application/json": {
                "examples": {
                  "notFound": {
                    "summary": "Short URL not found",
                    "value": { "statusCode": 404, "message": "Short URL not found", "error": "Not Found" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/my-urls": {
      "get": {
        "tags": ["Shorten"],
        "summary": "List all short URLs for authenticated user",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of user's short URLs",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "summary": "Successfully retrieved URLs",
                    "value": {
                      "data": [
                        {
                          "id": "uuid",
                          "originalUrl": "https://example.com",
                          "slug": "abc123",
                          "alias": null,
                          "shortUrl": "http://localhost:3000/abc123",
                          "accessCount": 5,
                          "createdAt": "2024-01-01T00:00:00.000Z",
                          "updatedAt": "2024-01-01T00:00:00.000Z"
                        }
                      ]
                    }
                  },
                  "empty": {
                    "summary": "No URLs found",
                    "value": { "data": [] }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Missing or invalid token",
            "content": {
              "application/json": {
                "examples": {
                  "missingToken": {
                    "summary": "Missing authentication token",
                    "value": { "statusCode": 401, "message": "Unauthorized", "error": "Unauthorized" }
                  },
                  "invalidToken": {
                    "summary": "Invalid or expired token",
                    "value": { "statusCode": 401, "message": "Invalid or expired token", "error": "Unauthorized" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              },
              "examples": {
                "default": {
                  "summary": "Valid request",
                  "value": { "email": "user@email.com", "password": "password123" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "summary": "User registered successfully",
                    "value": { "id": "uuid", "email": "user@email.com" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "examples": {
                  "validationError": {
                    "summary": "Validation error",
                    "value": { "statusCode": 400, "message": "Email is required", "error": "Bad Request" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Email already registered",
            "content": {
              "application/json": {
                "examples": {
                  "conflictError": {
                    "summary": "Email already registered",
                    "value": { "statusCode": 409, "message": "Email already registered", "error": "Conflict" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login and get JWT token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              },
              "examples": {
                "default": {
                  "summary": "Valid login request",
                  "value": { "email": "user@email.com", "password": "password123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "summary": "Login successful",
                    "value": { "data": { "accessToken": "jwt-token" }, "message": "Login successful" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "examples": {
                  "invalidCredentials": {
                    "summary": "Invalid credentials",
                    "value": { "statusCode": 401, "message": "Invalid credentials", "error": "Unauthorized" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error or rate limit",
            "content": {
              "application/json": {
                "examples": {
                  "validationError": {
                    "summary": "Validation error",
                    "value": { "statusCode": 400, "message": "Email is required", "error": "Bad Request" }
                  },
                  "rateLimit": {
                    "summary": "Too many login attempts",
                    "value": { "statusCode": 400, "message": "Too many login attempts. Please try again later.", "error": "Bad Request" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ShortenUrlDto": {
        "type": "object",
        "properties": {
          "originalUrl": {
            "type": "string",
            "example": "https://example.com"
          },
          "alias": {
            "type": "string",
            "example": "myalias"
          }
        },
        "required": ["originalUrl"]
      },
      "ShortenResponse": {
        "type": "object",
        "properties": {
          "shortUrl": {
            "type": "string",
            "example": "http://localhost:3000/myalias"
          },
          "ownerId": {
            "type": ["string", "null"],
            "example": "user-id-or-null"
          }
        },
        "required": ["shortUrl", "ownerId"]
      },
      "RegisterDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@email.com"
          },
          "password": {
            "type": "string",
            "example": "password123",
            "minLength": 6
          }
        },
        "required": ["email", "password"]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@email.com"
          },
          "password": {
            "type": "string",
            "example": "password123",
            "minLength": 6
          }
        },
        "required": ["email", "password"]
      }
    }
  }
}
