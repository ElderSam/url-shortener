{
  "openapi": "3.0.3",
  "info": {
    "title": "URL Shortener API",
    "version": "1.0.0"
  },
  "paths": {
  "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              },
              "examples": {
                "default": {
                  "summary": "Valid request",
                  "value": { "email": "user@email.com", "password": "password123" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "summary": "User registered successfully",
                    "value": { "id": "uuid", "email": "user@email.com" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "examples": {
                  "validationError": {
                    "summary": "Validation error",
                    "value": { "statusCode": 400, "message": "Email is required", "error": "Bad Request" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Email already registered",
            "content": {
              "application/json": {
                "examples": {
                  "conflictError": {
                    "summary": "Email already registered",
                    "value": { "statusCode": 409, "message": "Email already registered", "error": "Conflict" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login and get JWT token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              },
              "examples": {
                "default": {
                  "summary": "Valid login request",
                  "value": { "email": "user@email.com", "password": "password123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "summary": "Login successful",
                    "value": { "data": { "accessToken": "jwt-token" }, "message": "Login successful" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "examples": {
                  "invalidCredentials": {
                    "summary": "Invalid credentials",
                    "value": { "statusCode": 401, "message": "Invalid credentials", "error": "Unauthorized" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error or rate limit",
            "content": {
              "application/json": {
                "examples": {
                  "validationError": {
                    "summary": "Validation error",
                    "value": { "statusCode": 400, "message": "Email is required", "error": "Bad Request" }
                  },
                  "rateLimit": {
                    "summary": "Too many login attempts",
                    "value": { "statusCode": 400, "message": "Too many login attempts. Please try again later.", "error": "Bad Request" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegisterDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@email.com"
          },
          "password": {
            "type": "string",
            "example": "password123",
            "minLength": 6
          }
        },
        "required": ["email", "password"]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@email.com"
          },
          "password": {
            "type": "string",
            "example": "password123",
            "minLength": 6
          }
        },
        "required": ["email", "password"]
      }
    }
  }
}
